---
const key = import.meta.env.BUILDER_API_PUBLIC_KEY;
const model = 'refina-home'; // use your actual model name if different
const targetUrl = '/'; // preview the homepage content
---
<html lang="en">
  <head><meta charset="utf-8" /><title>Builder Preview</title></head>
  <body>
    <builder-component
      model={model}
      api-key={key}
      data-url={targetUrl}
      preview
    ></builder-component>
    <script async src="https://cdn.builder.io/js/webcomponents"></script>
  </body>
</html>
