---
const path = Astro.url.pathname;
const nav = [
{ href: '/', label: 'Home' },
{ href: '/features', label: 'Features' },
{ href: '/pricing', label: 'Pricing' },
{ href: '/demo', label: 'Demo' },
{ href: '/docs', label: 'Docs' },
{ href: '/changelog', label: 'Changelog' },
];
---
<header class="border-b border-gray-100">
<div class="container-max flex items-center justify-between py-4">
<a href="/" class="flex items-center gap-3">
<img src="/favicon.svg" alt="Refina logo" class="h-8 w-8" />
<span class="font-extrabold text-xl tracking-tight">Refina</span>
</a>
<nav class="hidden md:flex items-center gap-1" aria-label="Main">
{nav.map((item) => (
<a
href={item.href}
class={`btn-ghost ${path === item.href ? 'bg-brand-50' : ''}`}
aria-current={path === item.href ? 'page' : undefined}
>{item.label}</a>
))}
<a href="/pricing" class="btn-primary ml-2">Install</a>
</nav>
<details class="md:hidden">
<summary class="btn-ghost">Menu</summary>
<div class="mt-2 flex flex-col gap-1">
{nav.map((item) => (
<a href={item.href} class="btn-ghost">{item.label}</a>
))}
<a href="/pricing" class="btn-primary">Install</a>
</div>
</details>
</div>
</header>